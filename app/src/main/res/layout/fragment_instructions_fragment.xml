<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGray"
    tools:context=".Fragments.instructions_fragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/instruct_text1"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:background="@color/PSU"
        android:fontFamily="@font/roboto_slab_thin"
        android:text="@string/instructions_title"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/instruct_text2"
        android:layout_width="match_parent"
        android:layout_height="645dp"
        android:layout_marginTop="60dp"
        android:lines="6"
        android:text="@string/instructions"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instruct_text1" />

</androidx.constraintlayout.widget.ConstraintLayout>