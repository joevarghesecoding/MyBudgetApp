<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.fifty_fragment">

    <TextView
        android:id="@+id/fifty_text1"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:background="@color/PSU"
        android:fontFamily="@font/roboto_slab_thin"
        android:text="@string/fifty"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fifty_text2"
        android:layout_width="match_parent"
        android:layout_height="645dp"
        android:layout_marginTop="60dp"
        android:lines="6"
        android:text="@string/fifty_text"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fifty_text1" />

</androidx.constraintlayout.widget.ConstraintLayout>